<section class="bg-primary">
    <div
        class="px-8 2xl:max-w-7xl mx-auto mt-16"
        data-aos="fade-up"
        data-aos-duration="5000"
    >
        <div
            class="grid grid-cols-1 border-b border-b-secondary/20"
        >
            <Lemuel class="max-w-xl mb-16" />
            <p class="text-sm text-right">
                Western values and Cantonese work ethics
            </p>
        </div>
    </div>
</section>
